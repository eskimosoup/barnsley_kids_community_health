<!DOCTYPE html>
<html>
<%= render "layouts/head" %>
<body>
<%= render "layouts/header" %>

<div class="row">
  <div class="small-12 columns">
    <% flash.each do |name, msg| -%>
      <%= content_tag :div, msg, class: name %>
    <% end -%>
  </div>
</div>

<section class="service-layout <%= @presented_service.colour %> lightest-grey-background">
  <div class="row">
    <div class="medium-3 columns">
      <div class="separated-section">
        <%= render "layouts/service_navigation" if @service_menu %>
      </div>
    </div>
    <div class="medium-9 columns">
      <%= yield %>
    </div>
  </div>
</section>

<%= render "layouts/footer" %>
</body>
</html>
