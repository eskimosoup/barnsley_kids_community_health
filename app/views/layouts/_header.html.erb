<header>
  <div class="row">
    <div class="small-12 columns">
      <%= link_to image_tag("logo.jpg", alt: global_site_settings["Name"], class: 'left'), "#{ request.protocol }#{ 'www.' if Rails.env.production? }#{ request.domain }" %>
      <%= image_tag "nhs_logo.jpg", alt: "South West Yorkshire Partnership NHS Foundation Trust", class: 'right' %>
    </div>
  </div>

  <nav class="primary-navigation">
    <div class="row">
      <div class="small-12 columns">
        <ul class="navigation" id="header-navigation">
          <%= nested_menu_items(menu_items: @header_menu.menu_items) %>
        </ul>
      </div>
    </div>
  </nav>
</header>
