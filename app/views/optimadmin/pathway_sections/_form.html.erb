<%= form_for(pathway_section) do |f| %>
<% if pathway_section.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(pathway_section.errors.count, "error") %> prohibited this pathway_section from being saved:</h2>

    <ul>
      <% pathway_section.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  

  <div class="tabs prevent-flash">
    <ul class="tab-list">
      <li><a href="#tabs-1">Content</a></li>
      <li><a href="#tabs-2">Media</a></li>
      <li><a href="#tabs-3">Settings</a></li>
      <li>
        <%= link_to '#', class: 'destroy-tabs right', data: { class: 'tabs' } do %>
          <%= octicon('chevron-down') %>
        <% end %>
      </li>
    </ul>

    <%= field_set_tag nil, id: 'tabs-1' do %>
            <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
            <div class="field">
        <%= f.label :position %><br>
        <%= f.number_field :position %>
      </div>
            <div class="field">
        <%= f.label :pathway_rows_count %><br>
        <%= f.number_field :pathway_rows_count %>
      </div>
            <div class="field">
        <%= f.label :pathway_jigsaw_pieces_count %><br>
        <%= f.number_field :pathway_jigsaw_pieces_count %>
      </div>
          <% end %>

    <%= field_set_tag nil, id: 'tabs-2' do %>
      
          <% end %>

    <%= field_set_tag nil, id: 'tabs-3' do %>
            <div class="field">
        <%= f.label :display %><br>
        <%= f.check_box :display %>
      </div>
          <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
