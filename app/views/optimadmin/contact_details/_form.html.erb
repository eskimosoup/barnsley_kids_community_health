<%= form_for(contact_detail) do |f| %>
  <% if contact_detail.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact_detail.errors.count, "error") %> prohibited this contact_detail from being saved:</h2>

      <ul>
        <% contact_detail.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="tabs prevent-flash">
    <ul class="tab-list">
      <li><a href="#tabs-1">Content</a></li>
      <li><a href="#tabs-2">Settings</a></li>
      <li>
        <%= link_to '#', class: 'destroy-tabs right', data: { class: 'tabs' } do %>
          <%= octicon('chevron-down') %>
        <% end %>
      </li>
    </ul>

    <%= field_set_tag nil, id: 'tabs-1' do %>
      <div class="field">
        <%= f.label :address %><br>
        <%= f.text_area :address, class: "tinymce" %>
      </div>

      <div class="field">
        <%= f.label :postcode %><br>
        <%= f.text_field :postcode %>
      </div>

      <div class="field">
        <%= f.label :opening_hours %><br>
        <%= f.text_area :opening_hours, class: "tinymce" %>
      </div>

      <div class="field">
        <%= f.label :phone_number %><br>
        <%= f.text_area :phone_number %>
      </div>

      <div class="field">
        <%= f.label :email %><br>
        <%= f.email_field :email %>
      </div>
    <% end %>

    <%= field_set_tag nil, id: 'tabs-2' do %>
      <div class="field">
        <%= f.label :service_id %><br>
        <%= f.collection_select :service_id, Service.order(name: :asc), :id, :name, include_blank: true %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
