<li class="<%= 'has-dropdown' if sub_menu_items.present? %> <%= menu_item_presenter.li_classes %> menu-item-depth-<%= depth %>">
  <%= menu_item_presenter.link_to_webpage %>
  <% if sub_menu_items.present? %>
    <%= content_tag :ul, class: "depth-#{ depth } dropdown" do %>
      <%= nested_menu_items(menu_items: sub_menu_items, depth: depth + 1) %>
    <% end %>
  <% end %>
</li>
